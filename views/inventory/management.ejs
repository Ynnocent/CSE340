<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="management-div">
  <div class="classification-form">
    <form action="/management/newclass" method="post">
      <div>
        <label for="classification_name">Classification Name:</label>
        
        <input
          type="text"
          id="classification_name"
          name="classification_name"
          required
          pattern="[a-zA-Z]{3,}$"
        />
      </div>
      <div>
        <p>Name must be alphabetic characters only</p>
        <button type="submit">Add Classification</button>
      </div>
    </form>
  </div>
</div>
